doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block content
    br
    table
      tr
        td #drum
        td #drum
    button(onclick="randomize()")
    p#cal
    p "sine wave osc:"
    input#slide(type='range', min='0', max='30', value='0', oninput="updateSliderSine(this.value)")
    br
    p "sqr wave osc"
    input#sqrSlider(type='range', min='0', max='30', value='0', oninput="updateSliderSqr(this.value)")
    br
    p "sTooth wave osc"
    input#sToothButton(type='button', value="stop")
    input#sToothSlider(type='range', min='0', max='30', value='0', oninput="updateSlidersTooth(this.value)")
    p "vol slider for sTooth"
    input#sToothSliderVol(type='range', min='0', max='1', step='.01', value='.25', oninput="updateSlidersToothVol(this.value)")
    script(src="javascripts/tone.js")
